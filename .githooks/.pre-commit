#!/usr/bin/env bash
if [[ `git status --porcelain` ]]; then
  printf "\e[31;1m%s\e[0m\n" 'This script needs to run against committed code only. Please commit or stash you changes.'
  exit 1
fi
printf "\e[33;1m%s\e[0m\n" 'Running the Rubocop verify coding convention'
rubocop . -a

if [ $? -ne 0 ]; then
  printf "\e[31;1m%s\e[0m\n" 'Rubocop verify coding convention error'
  exit 1
fi
printf "\e[33;1m%s\e[0m\n" 'Finished running the Rubocop verify coding convention'